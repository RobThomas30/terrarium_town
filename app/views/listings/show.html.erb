<%= render 'shared/nav' %> 

<h1>Listing <%= "#{@listing.id}" %></h1>

<p><%= @listing.title %></p>
<p><%= @listing.price %></p>
<p><%= @listing.description %></p>
<p><%= @listing.sale_type %></p>
<p><%= @listing.size %></p>
<p><%= @listing.image %></p>
<p><%= @listing.user.email %></p>

<div class="show-edit-delete">
  <% if can? :edit, @listing %>
   <%= link_to "Edit", edit_listing_path(@listing.id) %>
   <%= link_to "Delete", listing_path(@listing.id), method: :delete %>
  <% end %>
  <%= link_to "Back", :back %>
</div>