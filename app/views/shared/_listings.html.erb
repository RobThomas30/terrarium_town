<div class='list-holder'>
  <div class='list'>
    <% @listings.each do |listing| %>

    <div class='each'>

      <div class='col-1'>
        <div class='listing-image'>
          <% if listing.image %>
            <a href=<%= listing_path(listing) %>>
              <img src=<%= listing.image %>>
            </a>
          <% else %>
            <%= link_to image_tag(listing.picture) if listing.picture.attached?%>
          <% end %>
        </div>
      </div>
        
      
      <div class='col-2'>
        <div class='listing-title'>
          <p><%= listing.title %></p>
        </div>

        <div class='sale'>
          <% if listing.sale_type.to_i == 1 %>
            <p>$<%= listing.price %></p>
          <% elsif listing.sale_type.to_i == 2 || 3 %>
            <p><%= number_to_sale_type(listing.sale_type) %></p>
          <% end %>
        </div>

        <div class='listing-size'>
          <p><%= number_to_size(listing.size) %></p>
        </div>

        <div class='listing-user'>
          <p><%= link_to "#{listing.user.profile.username}", dashboard_path(id: listing.user.id)  %></p>
        </div>
      </div>
    

      <div class='col-3'>
        <div class='listing-description'>
          <p><%= listing.description %></p>
        </div>

        <div class='section'>
          <div class='date'>
            <%= created_at_to_date(listing.created_at) %>
          </div>
          <div class='show-button'>
            <p><%= link_to "Show", listing_path(listing) %></p>
          </div>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>